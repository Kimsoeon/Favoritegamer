<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dodo1305.kr.hs.emirim.favoritegamer.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/msg_title"
        android:textSize="25sp"
        />
    <CheckBox
        android:id="@+id/check_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_lbl"/>
    <TextView
        android:id="@+id/msg_quest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/msg_quest"
        android:textSize="25sp"
        android:visibility="invisible"/>
    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible">
        <RadioButton
            android:id="@+id/radio_esca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/esca"/>
        <RadioButton
            android:id="@+id/radio_ryu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ryu"/>
        <RadioButton
            android:id="@+id/radio_tobi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tobi"/>
    </RadioGroup>
    <Button
        android:id="@+id/but_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/but_lbl"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/imgv_gamer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/esca"
        android:visibility="invisible"/>

</LinearLayout>
